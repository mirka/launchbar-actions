{
    "env": {
        "browser": false,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "LaunchBar": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": "2018"
    },
    "rules": {
        "comma-spacing": "error",
        "indent": [
            "error",
            "tab"
        ],
        "key-spacing": [
            "error",
            { "mode": "strict" }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": "off",
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "(^_)|(^run)"
            }
        ],
        "no-var": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "prefer-const": "error",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
